<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idForCourseSemesterImage"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/a" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idForCourseSessionTextView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Here goes to the Course Session"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/idForCourseNameTextView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Here goes to the Course name "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/idForCourseCodeTextView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Here goes to the Course Code"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/idForCourseTotalClassTextView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Here goes to the Course Total Class"
                android:textSize="15sp" />



        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

